.out {
  background-color: #202020;
  min-height: 100vh;
}

.back {
  position: absolute;
  top: 45px;
  left: 10px;
  width: 40px;
  height: 40px;
  z-index: 10000;
}

.back image {
  width: 100%;
  height: 100%;
}

.header {
  height: 600rpx;
  position: relative;
  overflow: hidden;
}

.bg_img {
  height: 600rpx;
}

.cover {
  background-color: rgba(0, 0, 0, 0.5);
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
}

.user_info {
  position: absolute;
  width: 100px;
  /* height: 100px; */
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  color: #fff;
  font-weight: bold;
  align-items: center;
  flex-direction: column;
}

.pic_box {
  padding: 3px;
  background-color: #fff;
  height: 100px;
  border-radius: 50%;
  margin-bottom: 5px;
}

.pic {
  border-radius: 50%;
  overflow: hidden;
  border: 1px solid lightgray;
}

.about_collect {
  color: #fff;
  display: flex;
  padding: 15px;
  justify-content: space-between;
}

.about_text {
  width: 200px;
  display: flex;
  justify-content: space-around;
}

.about_text>.tx {
  width: 50px;
  text-align: center;
  border: 1px solid tomato;
  border-radius: 18px;
  font-size: 12px;
  padding: 3px 0;
  margin: 0 !important;
  color: #fff !important;
}

.tx_ft {
  border-bottom: 2px solid tomato;
}

.collect_list {
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}

.colllect_item {
  width: 31%;
  height: 150px;
  /* background-color: #fff; */
  margin-bottom: 20px;
  position: relative;
}

.colllect_item>.bg {
  position: absolute;
  width: 100%;
  height: 100%;
  background-size: 100% 100%;

}

.colllect_item>.text {
  color: #fff;
  position: absolute;
  z-index: 11;
  height: inherit;
  display: flex;
  flex-direction: column;
  padding-left: 7px;
}

.colllect_item>.text>.tx {
  font-size: 8px;
  color: #fff;
}
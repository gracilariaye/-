/* pages/components/asideBtn/index.wxss */

.asside {
  width: 50px;
  display: flex;
  flex-direction: column;
  position: absolute;
  bottom: 150px;
  right: 6px;
}

.asside .btn {
  width: 100%;
  height: 50px;
  margin-top: 8px;
  border-radius: 50%;
  overflow: hidden;
  padding: 3px;
  box-sizing: border-box;
}
.btn_img{
  width: 100%;
  height: 100%;
}

.pic_box {
  padding: 3px;
  /* background-color: #fff; */
  height: 50px;
  border-radius: 50%;
  margin-bottom: 5px;
  box-sizing: border-box;
}

.pic {
  border-radius: 50%;
  overflow: hidden;
  width: 100%;
  height: 100%;
  /* border: 1px solid lightgray; */
}


.asside .btn image {
  width: 100%;
  height: 100%;
}

.img-button {

  padding: 0;

  border: none !important;

}